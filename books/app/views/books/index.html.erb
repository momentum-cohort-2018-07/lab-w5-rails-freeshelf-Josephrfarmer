<h1>Books</h1>
<%= link_to 'New Book', new_book_path(@book) %><br>
<%= link_to 'New User', new_user_path(@user) %>


<table>

<tr>
  <th>Title</th>
  <th>Author</th>
  <th>URL</th>
</tr>


 <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.URL %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  
  <% end %>
</table>

